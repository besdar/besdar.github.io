{
  "name": "besdar.github.io",
  "author": "besdar",
  "description": "Personal CV",
  "scripts": {
    "beforebuild": "rm -rf dist/* && cp public/* dist && rm dist/index.html",
    "dev": "npm run beforebuild && parcel ./public/index.html",
    "build": "npm run beforebuild && parcel build ./public/index.html",
    "deploy": "gh-pages -d dist",
    "check-js": "eslint --cache --ext .ts,.tsx ./src",
    "check-styles": "stylelint \"./src/**/*.css\"",
    "check-types": "tsc",
    "project-checking": "concurrently \"npm:check-*\"",
    "update-css-types": "tcm src --namedExports"
  },
  "browserslist": {
    "production": [
      ">1%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@parcel/packager-raw-url": "^2.3.0",
    "@parcel/transformer-webmanifest": "^2.3.0",
    "@types/node": "^18.16.3",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.1",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "autoprefixer": "^10.4.2",
    "concurrently": "^8.0.1",
    "eslint": "^8.8.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "gh-pages": "^5.0.0",
    "parcel": "^2.3.0",
    "postcss-modules": "^6.0.0",
    "process": "^0.11.10",
    "stylelint": "^15.6.0",
    "stylelint-config-standard": "^33.0.0",
    "typescript": "^5.0.4"
  }
}

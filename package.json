{
  "name": "besdar.github.io",
  "author": "besdar",
  "description": "Personal CV",
  "scripts": {
    "build:prepare": "rm -rf dist/* && cp public/manifest.json public/robots.txt public/404.html dist",
    "dev": "npm run beforebuild && parcel ./public/index.html",
    "build:script": "parcel build build/index.js --no-source-maps --target serverBuild --no-cache && node dist/serverBuild/index.js",
    "build:browser": "parcel build ./public/index.html --target clientBuild",
    "build:all": "npm run build:script && npm run build:prepare && npm run build:browser",
    "deploy": "gh-pages -d dist",
    "check-js": "eslint --cache --ext .ts,.tsx ./src",
    "check-styles": "stylelint \"./public/css/**/*.css\"",
    "check-types": "tsc --noEmit .src/**/*",
    "project-checking": "concurrently \"npm:check-*\"",
    "update-css-types": "tcm src --namedExports"
  },
  "browserslist": {
    "production": [
      ">1%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/node": "^20.5.9",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.1",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "concurrently": "^8.0.1",
    "eslint": "^8.8.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "gh-pages": "^6.0.0",
    "htmlnano": "^2.0.3",
    "node-html-parser": "^6.1.6",
    "parcel": "^2.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "stylelint": "^15.6.0",
    "stylelint-config-standard": "^34.0.0",
    "typescript": "^5.0.4"
  },
  "targets": {
    "serverBuild": {
      "context": "node"
    },
    "clientBuild": {
      "context": "browser",
      "publicUrl": "/",
      "distDir": "dist/"
    }
  }
}
